<section class="section section-contact" id="contact">
    <h1 class="section-title">Contact</h1>

    <div class="container">
        <form id="contact-form" class="contact-form" onsubmit="event.preventDefault();" data-aos="fade-up" data-aos-anchor-placement="center-bottom" data-aos-duration="800">
            <div id="contact-form-success" class="notification is-success">
                <button class="delete"></button>
                <p class="text"></p>
            </div>
            <div id="contact-form-danger" class="notification is-danger">
                <button class="delete"></button>
                <p class="text"></p>
            </div>
            <div class="columns">
                <div class="column is-half">
                    <div class="field">
                        <label class="label">Your Name</label>
                        <div class="control has-icons-left">
                            <input class="input" type="text" name="name" required>
                            <span class="icon is-small is-left">
                                <i class="fa fa-user" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="column is-half">
                    <div class="field">
                        <label class="label">Email</label>
                        <div class="control has-icons-left">
                            <input class="input" type="email" name="email" required>
                            <span class="icon is-small is-left">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="field">
                <label class="label">Message</label>
                <div class="control">
                    <textarea class="textarea" name="message" rows="8" required></textarea>
                </div>
            </div>
            <div class="control has-text-centered">
                <button class="button is-white g-recaptcha" data-sitekey="6Lehpj4UAAAAAPSyivhmsrDCX3HKArU0w6eAwqH-" data-callback="submitContactForm" onclick="gtag('event', 'click', { event_label: 'Contact Form' })">
                    <span>Send Message</span>
                    <span class="icon">
                        <i class="fa fa-paper-plane" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
        </form>
    </div>
</section>
